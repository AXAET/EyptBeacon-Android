<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/include1"
        layout="@layout/common_header2" />

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/include1"
        android:layout_margin="5dp"
        android:background="@drawable/input_bg"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/base_horization_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0sp"
                android:layout_height="50dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Name:"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/deviceName_text"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                android:layout_weight="4"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/base_horization_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="password:"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/oldpassword"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:hint="Input the old password"
                android:inputType="textPassword"
                android:maxLength="6"
                android:singleLine="true" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/base_horization_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="password:"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/newpassword"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:hint="Input the new password"
                android:inputType="textPassword"
                android:maxLength="6"
                android:singleLine="true" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/base_horization_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Confirm:"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/Confirmpassword"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:hint="Input the newpassword again"
                android:inputType="textPassword"
                android:maxLength="6"
                android:singleLine="true" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button_modify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/LinearLayout1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_selector"
        android:text="modify" />

</RelativeLayout>